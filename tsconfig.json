{
    "compilerOptions": {
      "sourceMap": true,
      "strict": true,
      "lib": ["esnext"],
      "target": "es6",
      "module": "commonjs",
      "outDir": "./dist",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "typeRoots": [
        "./node_modules/@types"
      ],
      "types": [
          "node",
          "jest"
      ],
    },
    "compileOnSave": true,
    "buildOnSave": true,
    "include": [
      "src/**/*.ts",
      "src/*.ts",
      "*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
  }
  